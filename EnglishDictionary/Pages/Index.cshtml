@page
@model IndexModel
@{
    ViewData["Title"] = "Look for definitions";
}

<div class="text-center search-compo">
    <h1 class="display-4">Enter a word</h1>
    <p class="subtitle">Press Search. See returned dictionary definition</p>
    <h2>
        <input id="wordBox" placeholder="Definition look up" />
        <a id="searchBtn" class="btn btn-primary">Search</a>
        <a class="speak-btn btn btn-success">Speak</a>
    </h2>
   
</div>
<div class="row">
    <div class="suggestions col-sm-2"></div>
    <article class="col-sm-9"></article>
</div>
<component-card data-title="Developer Profile"
                data-image="https://upload.wikimedia.org/wikipedia/commons/8/84/Humphrey_Bogart_1940.jpg"
                data-image-alt="Taken from wiki"
                data-description="noir Developer"
                data-cta-href="https://github.com/nickleus-j"
                data-cta-text="Read more">
</component-card>
